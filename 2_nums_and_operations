def  opera_numeros():

  num1 = int(input("Numero 1: "))
  num2 = int(input("Numero 2: "))
  operador = input("Insira o operador (+ , - , *, /): ")

  if operador != "+" and operador != "-" and operador != "*" and operador != "/":
    print("Operador inv√°lido")

  if operador == "+":
    print(num1 + num2)

  if operador == "-":
    print(num1 - num2)

  if operador == "*":
    print(num1 * num2)

  if operador == "/":
    print(num1 / num2)
  return 0

opera_numeros()
